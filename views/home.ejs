<html>

<head>
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <title>Saturdays Rankings</title>
</head>

<body>
  <div class="container">
    <h2 class="center">Valorant Rankings <button data-target="pickTeams" class="btn modal-trigger">Pick Teams</button>
    </h2>
    <p>
    <table class="striped">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Games Played</th>
        <th>Average MoV</th>
        <th>Average CS</th>
        <th>BOT</th>
      </tr>

      <% stats.forEach((stat)=> { %>
        <tr>
          <td>
            <%= stat.rank %>
          </td>
          <td>
            <%= stat.name %>
          </td>
          <td>
            <%= stat.gp %>
          </td>
          <td>
            <%= stat.aMoV %>
          </td>
          <td>
            <%= stat.aCS %>
          </td>
          <td>
            <%= stat.bOT %>
          </td>
        </tr>
        <% }); %>
    </table>
    </p>
  </div>

  <div id="pickTeams" class="modal">
    <div class="modal-content">
      <form method="POST" action="/">
        <div class="input-field col">
          <textarea name="players" id="players" class="materialize-textarea"></textarea>
          <label for="players">Type the names of the players, one per line</label>
        </div>
        <div class="col">
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

  <div id="pickedTeams" class="modal">
    <div class="modal-content">
      <div class="row">
        <div class="col s6">
          <table class="striped">
            <tr>
              <th>Team 1</th>
            </tr>
            <% team1Players.forEach((player)=> { %>
              <tr>
                <td>
                  <%= player %>
                </td>
              </tr>
              <% }); %>
          </table>
        </div>
        <div class="col s6">
          <table class="striped">
            <tr>
              <th>Team 2</th>
            </tr>
            <% team2Players.forEach((player)=> { %>
              <tr>
                <td>
                  <%= player %>
                </td>
              </tr>
              <% }); %>
          </table>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.modal');
      var instances = M.Modal.init(elems);

      <% if (team1Players && team1Players.length > 0) { %>
        const pickedTeamsModal = document.getElementById('pickedTeams');
        const instance = M.Modal.init(pickedTeamsModal, {
          dismissible: false
        });
        instance.open();
      <% } %>
    });
  </script>
</body>

</html>